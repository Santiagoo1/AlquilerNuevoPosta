        </div>

    <label class="tipodocumento">Tipo Documento</label>
     <div class="txt5">

        <InputSelect class="form-select" @bind-Value="@persona.TipoDocumentoId">
       
        @foreach (var item in tipodocumentos   )
           {
        <option value="@item.Id">@item.NombreTipoDocumento</option>
           }

           </InputSelect>
    <ValidationMessage For="@(()=> persona.TipoDocumentoId)" />
            
     </div>


    <label class="direccion">Direccion</label>
     <div class="txt6">

        <InputSelect class="form-select" @bind-Value="@persona.DireccionId">
       

            @foreach (var item in direcciones   )
           {
               <option value="@item.Id">@item.Localidad - @item.Departamento - @item.Provincia</option>
             
           }

           </InputSelect>
    <ValidationMessage For="@(()=> persona.DireccionId)" />
       


     </div>

    <label class="calleyaltura">  Calle y Altura</label>
     <div class="txt7">

        <InputText class="form-control" @bind-Value="@persona.CalleAltura" />
        <ValidationMessage For="@(()=> persona.CalleAltura)" />


     </div>




        



