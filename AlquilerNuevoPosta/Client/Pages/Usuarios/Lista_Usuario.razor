@code {
    List<Persona> personas;
   


    protected override async Task OnInitializedAsync()
    {
        base.OnInitializedAsync();
        await Leer();
          }

    private async Task Leer()

    {

        var respuesta = await http.Get<List<Persona>>("api/Personas");
        
        if (!respuesta.Error)
        {
            personas = respuesta.Respuesta;
        }

    }



